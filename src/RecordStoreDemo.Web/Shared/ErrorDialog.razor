<MudDialog>
    <DialogContent>
        <MudGrid Class="pb-3">
            <MudItem xs="12" Class="d-flex">
                <MudText Class="mt-5" Typo="Typo.h6">@ErrorMessage</MudText>
            </MudItem>
        </MudGrid>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }
    [Parameter] public string ErrorMessage { get; set; } = string.Empty;
}