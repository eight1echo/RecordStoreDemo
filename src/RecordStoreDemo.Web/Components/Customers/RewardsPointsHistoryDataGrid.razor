<MudDataGrid T="RewardsTransactionModel" Items="RewardsCard.Transactions"
             Filterable="true" RowsPerPage="25" SortMode="SortMode.Multiple"
             Bordered="true" Dense="true"
             Hover="true">

    <ToolBarContent>
        <MudGrid Class="px-5">
            <MudItem xs="4" Class="d-flex align-center">
                <MudText Typo="Typo.h6">Total Points:</MudText>
            </MudItem>
            <MudItem xs="8" Class="d-flex align-center justify-start">
                <MudText Typo="Typo.h6">@RewardsCard.Points</MudText>
            </MudItem>
        </MudGrid>
    </ToolBarContent>

    <Columns>
        <PropertyColumn Property="x => x.Date" Filterable="false" />
        <PropertyColumn Property="x => x.PointsChange" Filterable="false" />
    </Columns>

    <PagerContent>
        <MudDataGridPager T="RewardsTransactionModel" />
    </PagerContent>
</MudDataGrid>

@code {
    [Parameter] public RewardsCardModel RewardsCard { get; set; } = new();
}